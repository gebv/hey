{
	"PkgName": "models",
	"Imports": ["github.com/golang/glog", "github.com/satori/go.uuid"],
	"Models": [
		{
			"Name": "ChannelCounter",
			"Type": "database",
			"TableName": "channel_counters",
			"FactoryCustomCode": [],
			"Fields": [
				{
					"Name": "ClientId",
					"Type": "uuid.UUID"
				},
				{
					"Name": "ChannelId",
					"Type": "uuid.UUID"
				},
				{
					"Name": "CounterEvents",
					"Type": "int64"
				}
			]
		},
		{
			"Name": "ChannelWatcher",
			"Type": "database",
			"TableName": "channel_watchers",
			"FactoryCustomCode": [],
			"Fields": [
				{
					"Name": "ClientId",
					"Type": "uuid.UUID"
				},
				{
					"Name": "ChannelId",
					"Type": "uuid.UUID"
				},
				{
					"Name": "UserId",
					"Type": "uuid.UUID"
				},
				{
					"Name": "Unread",
					"Type": "int64"
				}
			]
		},
		{
			"Name": "Channel",
			"Type": "database",
			"TableName": "channels",
			"Implements": ["ModelAbstract"],
			"FactoryCustomCode": [
				"model.ExtProps = NewStringMap()"
			],
			"Fields": [
				{
					"Name": "ChannelId",
					"Type": "uuid.UUID",
					"IsPrimaryKey": true
				},
				{
					"Name": "ClientId",
					"Type": "uuid.UUID"
				},
				{
					"Name": "ExtId",
					"Type": "string"
				},
				{
					"Name": "ExtIdHash",
					"Type": "string"
				},
				{
					"Name": "ExtProps",
					"Type": "StringMap"
				},
				{
					"Name": "ExtFlags",
					"Type": "[]string"
				},
				{
					"Name": "Owners",
					"Type": "UUIDArray"
				},
				{
					"Name": "RootThreadId",
					"Type": "uuid.UUID"
				}
			],
			"Transformer": {
				"From": [
					{
						"Name": "ChannelDTO",
						"Map": {
							"ExtId": "ExtId",
							"ExtProps": "ExtProps",
							"ExtFlags": "ExtFlags"
						},
						"Custom": [
							"model.ClientId = uuid.FromStringOrNil(dto.ClientId)",
							"model.ExtIdHash = HashText(dto.ExtId)",
							"model.Owners.FromArray(dto.Owners)"
						]
					}
				]
			}
		},
		{
			"Name": "ChannelDTO",
			"Type": "dto",
			"Implements": ["DTOAbstract"],
			"FactoryCustomCode": [
				"model.ExtProps = NewStringMap()"
			],
			"Fields": [
				{
					"Name": "ClientId",
					"Type": "string",
					"Tags": {
						"json": "-",
						"v": "required"
					}
				},
				{
					"Name": "ExtId",
					"Type": "string",
					"Tags": {
						"v": "required"
					}
				},
				{
					"Name": "ExtProps",
					"Type": "StringMap"
				},
				{
					"Name": "ExtFlags",
					"Type": "StringArray"
				},
				{
					"Name": "Owners",
					"Type": "StringArray",
					"Tags": {
						"v": "gt=1"
					}
				}
			]
		}
	]
}